{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution":"node",
        "baseUrl": ".",
        // "noImplicitAny": true,
        // "sourceMap": true,
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["./api/**/*"],
    "exclude": [
        "node_modules"
    ]
}